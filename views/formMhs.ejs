<div class="container mt-5">
  <h2>Form Kuesinoer Mahasiswa</h2>
  <form id="formMhs">
    <div class="mb-3">
      <!-- data mahasiswa  -->
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="nama" name="nama" aria-describedby="emailHelp" />
      <label for="exampleInputEmail1" class="form-label">Email address</label>
      <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" />
      <label for="nim" class="form-label">NIM</label>
      <input type="text" class="form-control" id="nim" name="nim" aria-describedby="emailHelp" />
      <!-- end data mahasiswa  -->

      <% questions.forEach(question => { %>
      <div class="mt-3" style="margin-bottom: 20px">
        <p><strong><%= question.question_text %></strong></p>

        <label><input type="radio" id="sangatPuas" name="answers[<%= question.id %>]" value="Sangat Puas" required /> Sangat Puas</label><br />
        <label><input type="radio" id="puas" name="answers[<%= question.id %>]" value="Puas" required /> Puas</label><br />
        <label><input type="radio" id="tidakPuas" name="answers[<%= question.id %>]" value="Tidak Puas" required /> Tidak Puas</label>
      </div>
      <% }) %>

      <button type="submit" class="btn btn-outline-warning">Submit</button>
    </div>
  </form>
</div>

<script>
  document.getElementById("formMhs").addEventListener("submit", async function (event) {
    event.preventDefault();

    // Ambil nilai input data mahasiswa
    const nama = document.getElementById("nama").value;
    const email = document.getElementById("email").value;
    const nim = document.getElementById("nim").value;

    // Ambil nilai dari setiap pertanyaan
    const answers = {};
    const radioButtons = document.querySelectorAll('input[type="radio"]:checked');

    radioButtons.forEach((radioButton) => {
      const questionId = radioButton.name.match(/\[(.*?)\]/)[1]; // Ambil question_id dari name="answers[question_id]"
      answers[questionId] = radioButton.value;
    });

    const formQuesioner = {
      nama: nama,
      email: email,
      nim: nim,
      answers: answers,
    };
    try {
      const response = await fetch("/form/submitForm", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(formQuesioner),
      });

      const result = await response.json();
      console.log(result);

      if (result.success) {
        Swal.fire({
          icon: "success",
          title: "Berhasil Submit!",
          text: "Terima kasih atas partisipasinya.",
          timer: 2000,
          showConfirmButton: false,
        });

        setTimeout(() => {
          window.location.href = "/"; //mengarahka ke dashboard page
        }, 2000);
      } else {
        Swal.fire({
          icon: "error",
          title: "Gagal Submit",
          text: result.message || "Terjadi kesalahan.",
        });
      }
    } catch (error) {
      Swal.fire({
        icon: "error",
        title: "Kesalahan Server",
        text: error.message || "Gagal terhubung ke server.",
      });
    }
  });
</script>

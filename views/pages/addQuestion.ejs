<div class="container my-5">
  <div class="card border-0 shadow-lg rounded-4">
    <div class="card-body px-5 py-4">
      <h2 class="text-center text-gradient mb-4"><i class="fas fa-clipboard-list me-2 text-primary"></i>Tambah Pertanyaan Kuesioner</h2>

      <form id="addQuestionform">
        <div id="questionContainer">
          <!-- Pertanyaan pertama -->
          <div class="question-block mb-4 p-4 border rounded-3 bg-light shadow-sm">
            <h5 class="mb-3 text-secondary"><i class="fas fa-question-circle me-2 text-warning"></i>Pertanyaan 1</h5>

            <!-- Input Teks Pertanyaan -->
            <div class="mb-3">
              <label class="form-label fw-bold">Teks Pertanyaan</label>
              <input type="text" class="form-control" name="question_text[]" placeholder="Masukkan pertanyaan..." required />
            </div>

            <!-- Pilih Kategori Pertanyaan -->
            <div class="mb-3">
              <label class="form-label fw-bold">Kategori Pertanyaan</label>
              <select class="form-select" name="question_category[]" required>
                <option disabled selected value="">-- Pilih Kategori --</option>
                <option value="Metode Pembelajaran">Metode Pembelajaran</option>
                <option value="Proses Pembelajaran">Proses Pembelajaran</option>
                <option value="Fasilitas dan Sarana">Fasilitas dan Sarana</option>
              </select>
            </div>

            <!-- Tipe Jawaban (tetap radio untuk skala kepuasan) -->
            <input type="hidden" name="answer_type[]" value="radio" />
            <p class="text-muted small fst-italic">Tipe jawaban: Skala kepuasan (Sangat Puas â†’ Sangat Tidak Puas)</p>
          </div>
        </div>

        <!-- Tombol Tambah & Simpan -->
        <div class="d-flex justify-content-between align-items-center mt-3">
          <button type="button" class="btn btn-outline-primary fw-semibold" id="addQuestionBtn"><i class="fas fa-plus-circle me-1"></i> Tambah Pertanyaan</button>
          <button type="submit" class="btn btn-warning fw-semibold px-4 shadow-sm"><i class="fas fa-paper-plane me-1"></i> Simpan Semua</button>
        </div>
      </form>/''
    </div>
  </div>
</div>


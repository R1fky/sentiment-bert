<link rel="stylesheet" href="/css/formMhs/listFormMhs.css">
<div class="container py-5">
  <!-- Header -->
  <div class="bg-soft-purple p-4 rounded-4 shadow-sm text-center mb-4 border border-purple-subtle">
    <h3 class="fw-bold text-purple m-0"><i class="bi bi-ui-checks me-2"></i> Formulir Kuesioner Tersedia</h3>
  </div>

  <!-- Konten -->
  <% if (formList.length === 0) { %>
  <div class="alert alert-warning text-center shadow-sm rounded-3">Belum ada formulir tersedia.</div>
  <% } else { const thumbnails = [ "/image/formMhs/thumb1.png", "/image/formMhs/thumb2.png", "/image/formMhs/thumb3.png" ]; %>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% formList.forEach((form, index) => { const imgSrc = thumbnails[index % thumbnails.length]; %>
    <div class="col">
      <div class="card h-100 border-0 rounded-4 transition-hover highlight-yellow">
        <img src="<%= imgSrc %>" class="card-img-top rounded-top-4" alt="Formulir Gambar" style="height: 180px; object-fit: cover" />
        <div class="card-body d-flex flex-column justify-content-between">
          <div>
            <h5 class="fw-bold text-purple"><%= form.title %></h5>
            <p class="text-muted small mb-3"><%= form.description || 'Tanpa deskripsi.' %></p>
          </div>
          <div class="text-end">
            <a href="/form-mhs/<%= form.id %>/isi" class="btn btn-purple btn-sm rounded-pill shadow-sm"> <i class="bi bi-pencil-square me-1"></i> Isi Kuesoner </a>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <% } %>
</div>

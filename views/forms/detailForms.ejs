<div class="container mt-5">
  <div class="bg-white rounded-4 shadow-sm p-4 p-md-5">
    <h3 class="fw-bold text-primary mb-2"><i class="bi bi-journal-text me-2"></i><%= form.title %></h3>
    <p class="text-muted mb-4"><%= form.description || "Tidak ada deskripsi." %></p>

    <h5 class="fw-semibold mb-3">ğŸ“‹ Daftar Pertanyaan:</h5>
    <% if (form.questions.length === 0) { %>
    <div class="alert alert-info">Belum ada pertanyaan di formulir ini.</div>
    <% } else { %>
    <ul class="list-group">
      <% form.questions.forEach((q, i) => { %>
      <li class="list-group-item">
        <div class="fw-semibold mb-1">Pertanyaan <%= i + 1 %>: <%= q.question_text %></div>
        <small class="text-muted"> Tipe: <%= q.question_type %> | Kategori: <%= q.question_category || "Tidak ditentukan" %> </small>
      </li>
      <% }) %>
    </ul>
    <% } %>
  </div>
</div>

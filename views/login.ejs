<link rel="stylesheet" href="/css/login.css" />
<div class="login-container">
  <div class="login-left">
    <img src="https://cdni.iconscout.com/illustration/premium/thumb/login-authentication-4488953-3723270.png" class="img-fluid" alt="Login Illustration" />
  </div>
  <div class="login-right">
    <div class="text-end"></div>
    <h2 class="fw-bold mt-4">Welcome to PNL Sentimen!</h2>
    <form id="loginUser">
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="username" name="username" required />
      </div>
      <div class="mb-4">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" required />
      </div>
      <button type="submit" class="btn btn-login w-100">Login</button>
    </form>
    <!-- loading spinner -->
    <div id="loadingSpinner" class="hidden fixed inset-0 bg-black bg-opacity-60 z-50 flex items-center justify-center">
      <div class="flex flex-col items-center space-y-4">
        <div class="relative">
          <div class="h-16 w-16 rounded-full border-4 border-gray-300 border-t-4 border-t-yellow-400 animate-spin shadow-lg"></div>
          <div class="absolute inset-0 flex items-center justify-center">
            <i class="fas fa-circle-notch text-yellow-400 animate-spin-slow text-xl"></i>
          </div>
        </div>
        <p class="text-white text-lg font-semibold animate-pulse">Memproses jawaban...</p>
      </div>
    </div>
    <div class="text-center mt-4">
      <small>Login account with</small>
      <div class="social-login">
        <i class="bi bi-facebook"></i>
        <i class="bi bi-linkedin"></i>
        <i class="bi bi-google"></i>
      </div>
    </div>
  </div>
</div>
<script src="/js/login.js"></script>

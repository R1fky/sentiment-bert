<link rel="stylesheet" href="/css/addQuestion.css">

<div class="container my-5 fade-slide-in">
  <div class="bg-white rounded-3 shadow-lg p-6 md:p-10">
    <h2 class="text-center text-2xl md:text-3xl font-bold mb-6 text-transparent bg-clip-text bg-gradient-to-r from-yellow-500 to-orange-500"><i class="fas fa-clipboard-list me-2 text-primary"></i> Tambah Pertanyaan Kuesioner</h2>

    <form id="addQuestionform" class="space-y-6">
      <div id="questionContainer" class="space-y-6">
        <!-- Pertanyaan pertama -->
        <div class="question-block rounded-xl border border-gray-200 bg-gray-50 shadow-sm p-5">
          <h5 class="mb-4 font-semibold text-gray-600 flex items-center gap-2"><i class="fas fa-question-circle text-yellow-500"></i> Pertanyaan 1</h5>

          <!-- Input Teks Pertanyaan -->
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 mb-1">Teks Pertanyaan</label>
            <input type="text" name="question_text[]" required placeholder="Masukkan pertanyaan..." class="form-control rounded-md focus:ring-2 focus:ring-yellow-400" />
          </div>

          <!-- Kategori Pertanyaan -->
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 mb-1">Kategori Pertanyaan</label>
            <select name="question_category[]" required class="form-select rounded-md">
              <option disabled selected value="">-- Pilih Kategori --</option>
              <option value="Metode Pembelajaran">Metode Pembelajaran</option>
              <option value="Proses Pembelajaran">Proses Pembelajaran</option>
              <option value="Fasilitas dan Sarana">Fasilitas dan Sarana</option>
            </select>
          </div>

          <!-- Hidden tipe jawaban -->
          <input type="hidden" name="answer_type[]" value="radio" />
          <p class="text-sm text-gray-500 italic">Tipe jawaban: Skala kepuasan (Sangat Puas â†’ Sangat Tidak Puas)</p>
        </div>
      </div>

      <!-- Tombol -->
      <div class="flex justify-between items-center pt-4">
        <button type="button" id="addQuestionBtn" class="btn btn-outline-primary px-4 py-2 rounded-md hover:shadow-md transition"><i class="fas fa-plus-circle me-1"></i> Tambah Pertanyaan</button>
        <button type="submit" class="btn bg-yellow-400 hover:bg-yellow-500 text-black font-semibold px-6 py-2 rounded-md shadow transition"><i class="fas fa-paper-plane me-1"></i> Simpan Semua</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/addQuestion.js"></script>
